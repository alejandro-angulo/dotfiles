[init]
    defaultBranch = main

[pull]
    rebase = true

[user]
    email = iam@alejandr0angul0.dev
    name = Alejandro Angulo
    signingKey = 76FE5C53

[core]
    pager = less -F -X
    excludesfile = ~/.config/git/global_ignore

[commit]
    gpgsign = true

[tag]
    gpgSign = true

[gpg]
    program = gpg2

[alias]
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pushup = push -u origin HEAD

[pager]
    diff = "$(which delta 2>/dev/null) | less"
    log = "$(which delta 2>/dev/null) | less"
    reflog = "$(which delta 2>/dev/null) | less"
    show = "$(which delta 2>/dev/null) | less"

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    line-numbers = true
    navigate = true

[interactive]
    diffFilter = "$(which delta 2>/dev/null) --color-only | less"
